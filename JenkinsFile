pipeline {
    agent any

    tools {
        
        maven "MAVEN_HOME"
    }

    stages {
    
    	stage('Initialize') {
    		steps {
    			script {
    				echo "==============="
    				echo "Targets"
    				echo "Target :: ${Target1}"
    				echo "TargetInstall :: ${Target2}"
    					}
    				}
    			}
        stage('Checkout') {
            steps {
                // Check out the source code from the Git repository
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'JanhaviGupta23', url: 'https://github.com/JanhaviGupta23/DemoRepo.git']])
            }
        }

        stage('Build') {
            steps {
                // Build your project (replace with your build command)
                sh 'mvn clean package'
            }
        }
    }

    post {
        success {
            echo 'The pipeline completed successfully!'
        }

        failure {
            echo 'The pipeline failed!'
        }
    }
}
